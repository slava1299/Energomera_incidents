{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DbConnections": {
    "ExternalDb" : "{DB_CONNECTION}"
  },
  "Bot": {
    "Name" : "{BOT NAME}",
    "TelegramToken" : "{BOT TELEGRAM TOKEN}",
    "Webhook" : "{BOT WEBHOOK}",
    "ResourcesFilePath" : "Resources.json",
    "DbConnection" : "{POSTGRESQL DB CONNECTION}",
    "Password" : "{BOT PASSWORD}",
    "MediaDirectory": "C:\\Hello\\Media",
    "ExceptionDirectory": "C:\\Hello\\exceptions"
  },
  "BotOptions": {
    "SaveUpdatesInDatabase" : true,
    "SaveExceptionsInDatabase" : true,
    "SaveExceptionsInDirectory" : true
  },
  "Email": {
    "Name": "{Служба инцидентов энергомеры}",
    "Password": "{PASSWORD}",
    "EmailAddress": "incident@mail.ru",
    "Host": "{HOST MAIL SERVER}",
    "Port": 25
  },
  "Quartz" : {
    "MasTelegramAlarmsStartJobCron" : "*/10 * * * * ?",
    "ExpiredIncidentTimeNotificationJobCron" : "*/10 * * * * ?",
    "PreventIncidentNotificationJobCron" : "*/10 * * * * ?",
    "EmailQueueSenderJobCron" : "*/10 * * * * ?"
  }
}
